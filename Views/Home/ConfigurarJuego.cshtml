    <form action='@Url.Action("Comenzar", "Home")' method="get">
    
        
        Nombre Usuario: 
        <input type="text" id="texto" name="username" placeholder="Ingrese su nombre" required/><br/>
        <p>
            Dificultad:<br>

            @foreach(Dificultad palabra in ViewBag.Dificultad){
                <input type="radio" name="dificultad" value="@palabra.IdDificultad"/>@palabra.Nombre<br/> 
            }
            <input type="radio" name="dificultad" value="-1" /> Todas las dificultades<br/>
        </p>
        
        <p>
            Categoria:<br>
    
            @foreach(Categoria palabra in ViewBag.Categoria){
                
                <input type="radio" name="Categoria" value="@palabra.IdCategoria" />@palabra.Nombre<br/> 
                 
            }
            <input type="radio" name="Categoria" value="-1" />Todas las categorias<br/> 
        </p>

        <button type="submit">Jugar</button>
    </form>